/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.hiden{
  overflow: hidden; /*店名超出部分隐藏*/
  white-space: nowrap; /*不允许换行*/
  text-overflow: ellipsis; /*超出部分用...*/
}
.boxbutton{
  background: #23e033;
  display:inline-block;
  height: 70rpx;
  width: 300rpx;
  margin-left: 50rpx;
  line-height: 70rpx;
  color: whitesmoke;
  box-sizing: border-box;
  box-shadow: 10rpx 10rpx 5rpx  #888888;
}
.divider{
  height: 20rpx;
  background: #f1f1f1;
}
.arrow {
  display: flex;
  justify-content: space-between; /*两端对齐*/
  align-items: center;    /*垂直居中*/
}

/* 右侧的小符号 */
.arrow::after {
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
}